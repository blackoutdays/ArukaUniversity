<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - arusha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/arusha.styles.css" asp-append-version="true" />

    <style>
        /* Добавим стили для навбара */
        .navbar-nav {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            justify-content: center; /* Центрируем элементы по горизонтали */
            align-items: center; /* Выравниваем элементы по вертикали */
        }

            .navbar-nav li {
                margin: 0 10px; /* Отступы между элементами меню */
                position: relative; /* Позиционируем для анимации */
            }

                .navbar-nav li a {
                    color: #333; /* Цвет текста ссылок */
                    text-decoration: none;
                    transition: color 0.3s; /* Анимация изменения цвета текста */
                    position: relative; /* Позиционируем для анимации подчеркивания */
                }

                    .navbar-nav li a::before {
                        content: '';
                        position: absolute;
                        width: 100%;
                        height: 2px;
                        bottom: -5px;
                        left: 0;
                        background-color: #ff4500; /* Цвет подчеркивания */
                        visibility: hidden;
                        transform: scaleX(0); /* Скрываем подчеркивание */
                        transition: all 0.3s ease-in-out; /* Анимация расширения и скрытия подчеркивания */
                    }

                    .navbar-nav li a:hover::before {
                        visibility: visible;
                        transform: scaleX(1); /* Показываем подчеркивание */
                    }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Aruka University SQL Azure Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="University" asp-action="Index">Universities</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Program" asp-action="Index">Programs</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Student" asp-action="Index">Students</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="storedProcedure" asp-action="Index">Procedure</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
